// operating with variables

#include <iostream>
using namespace std;

int main ()
{
  // declaring variables:
  int a, b;
  int result;

  // process:
  a = 5;
  b = 2;
  a = a + 1;
  result = a + b;

  // print out the result:
 cout << "You have" <<endl << result << endl << "in your bank" <<endl;
 cout << "Pleas go home now!" << endl;
 

  // terminate the program:
  return 0;
}
